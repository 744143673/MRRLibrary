<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 使用 API Level 22 編譯的話，要拿掉前綴字 -->
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Window color-->
        <item name="android:windowBackground">@android:color/white</item>

        <item name="toolbarStyle">@style/Toolbar.Base</item>

        <item name="android:listDivider">@drawable/divider</item>

        <!--系统默认字体大小和颜色-->
        <item name="android:textAppearanceSmall">@style/TextAppearanceSmall.Base</item>

    </style>

    <style name="TextAppearanceSmall.Base" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
